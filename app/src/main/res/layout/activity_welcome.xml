<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/welcome"
            android:layout_width="450dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:elevation="1dp"
            android:src="@drawable/welcome" />

        <ImageView
            android:id="@+id/tree"
            android:layout_width="match_parent"
            android:layout_height="750dp"
            android:layout_below="@id/welcome"
            android:layout_marginTop="-381dp"
            android:scaleType="centerCrop" android:src="@drawable/tree" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Cell Identifier!"
            android:textColor="#023020"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="30dp"/>

        <Button
            android:id="@+id/signUpButton"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/tree"
            android:background="@drawable/rounded_signupbutton"
            android:padding="12dp"
            android:radius="12dp"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/signIn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@id/signUpButton"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:onClick="onClickableTextClick"
            android:text="Already have an account? Login."
            android:layout_gravity="center_horizontal"
            android:textColor="#023020" />

    </LinearLayout>

</RelativeLayout>

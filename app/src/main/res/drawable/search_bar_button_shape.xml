<?xml version="1.0" encoding="utf-8"?>
<!--https://stackoverflow.com/questions/43674186/how-to-draw-a-line-in-diagonal-direction-on-a-widget-android-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="45">
            <shape
                android:shape="line">
                <stroke
                    android:color="@color/black"
                    android:width="2dp"/>
            </shape>
        </rotate>
    </item>

    <item>
        <rotate
            android:fromDegrees="-45">
            <shape
                android:shape="line">
                <stroke
                    android:color="@color/black"
                    android:width="2dp"/>
            </shape>
        </rotate>
    </item>
</layer-list>